{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["dom", "dom.iterable", "es2023"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "plugins": [{ "name": "ts-lit-plugin", "strict": true }],
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "sourceMap": true,
    "target": "es2022"
  },
  "exclude": ["*.config.js", "coverage", "hello-web-components.*", "lib"],
  "include": [".**/**/*", "**/*"]
}
